<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/custom_alert_dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Add Primogemss"
        android:textColor="@color/dark_grey_2"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_primogem_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Primogem Qty."
            android:textAlignment="center"
            android:textColor="@color/dark_grey_2"
            android:textSize="8sp" />

        <EditText
            android:id="@+id/et_add_primogems"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_3"
            android:inputType="number"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/dark_grey_2"
            android:textSize="8sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>




    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_cancel"
            android:layout_width="125dp"
            android:layout_height="32dp"
            android:background="@drawable/custom_alert_dialog_button"
            android:drawableStart="@drawable/ic_cancel"
            android:drawablePadding="18dp"
            android:paddingStart="5dp"
            android:text="Cancel"
            android:textSize="10sp"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_confirm"
            android:layout_width="125dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_alert_dialog_button"
            android:drawableStart="@drawable/ic_confirm"
            android:drawablePadding="14dp"
            android:paddingStart="5dp"
            android:text="Confirm"
            android:textSize="10sp"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textAllCaps="false"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>
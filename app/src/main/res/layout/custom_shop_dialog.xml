<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@drawable/custom_alert_dialog_background">

    <TextView
        android:id="@+id/tv_shop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Buy Intertwined Fates"
        android:textColor="@color/dark_grey_2"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_shop_fate"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_intertwined_fate_2" />

        <TextView
            android:id="@+id/tv_shop_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Intertwined Fates amount:"
            android:textAlignment="center"
            android:textColor="@color/dark_grey_2"
            android:textSize="8sp" />

        <EditText
            android:id="@+id/et_shop_amount"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_3"
            android:inputType="number"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/dark_grey_2"
            android:textSize="8sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primogems Cost: "
                android:textColor="@color/dark_grey_2"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_primogems_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160"
                android:textColor="@color/dark_grey_2"
                android:textSize="8sp" />

        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_shop_cancel"
            android:layout_width="125dp"
            android:layout_height="32dp"
            android:background="@drawable/custom_alert_dialog_button"
            android:drawableStart="@drawable/ic_cancel"
            android:drawablePadding="18dp"
            android:paddingStart="5dp"
            android:text="Cancel"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_shop_confirm"
            android:layout_width="125dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_alert_dialog_button"
            android:drawableStart="@drawable/ic_confirm"
            android:drawablePadding="14dp"
            android:paddingStart="5dp"
            android:text="Confirm"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="10sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_video_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_main" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/ic_wish"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="5"
        android:text="Wish"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_character_event"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@null"
            android:focusedByDefault="true"
            android:src="@drawable/character_event_button_focused" />

        <ImageButton
            android:id="@+id/btn_weapon_event"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:src="@drawable/weapon_event_button" />

        <ImageButton
            android:id="@+id/btn_standard_banner"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/standard_button" />

    </LinearLayout>
    
    <ImageView
        android:id="@+id/banner_image"
        android:layout_width="550dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/character_event_banner"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">
        
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_primogems"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:background="@drawable/custom_button_2"
            android:drawableStart="@drawable/ic_primogem"
            android:drawableEnd="@drawable/ic_add"
            android:drawablePadding="4dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/tv_fates"
            android:layout_width="45dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_2"
            android:drawableStart="@drawable/ic_intertwined_fate"
            android:drawablePadding="4dp"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="textStart"/>
        
    </LinearLayout>
        
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="15dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_shop"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="Shop"
            android:textSize="8sp"
            android:textColor="@color/dark_grey"
            android:textAllCaps="false"
            android:background="@drawable/custom_button_1"
            android:shadowRadius="100"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_details"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="Details"
            android:textSize="8sp"
            android:textColor="@color/dark_grey"
            android:textAllCaps="false"
            android:background="@drawable/custom_button_1"
            android:shadowRadius="100"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_history"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="History"
            android:textSize="8sp"
            android:textColor="@color/dark_grey"
            android:textAllCaps="false"
            android:background="@drawable/custom_button_1"
            android:shadowRadius="100"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_one_wish"
            android:layout_width="103dp"
            android:layout_height="25dp"
            android:text="Wish x1"
            android:textSize="7sp"
            android:textColor="@color/beige"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_intertwined_fate"
            android:paddingStart="23dp"
            android:drawablePadding="5dp"
            android:background="@drawable/button_3"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ten_wish"
            android:layout_width="103dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:text="Wish x10"
            android:textSize="7sp"
            android:textColor="@color/beige"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_intertwined_fate"
            android:paddingStart="23dp"
            android:drawablePadding="5dp"
            android:background="@drawable/button_3"/>

    </LinearLayout>


</RelativeLayout>